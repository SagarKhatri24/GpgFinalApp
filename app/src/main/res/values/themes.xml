<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GpgFinalApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="fontFamily">@font/nobile</item>
        <item name="android:fontFamily">@font/nobile</item>
    </style>

    <style name="Theme.GpgFinalApp" parent="Base.Theme.GpgFinalApp" />

    <style name="text_18" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="edit_15" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_1</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="button_15" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="text_14" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

</resources>